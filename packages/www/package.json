{
	"name": "www",
	"version": "0.1.0",
	"private": true,
	"license": "MIT",
	"homepage": ".",
	"dependencies": {
		"@types/typedarray-to-buffer": "^4.0.0",
		"bigint-buffer": "^1.1.5",
		"ethers": "^5.6.9",
		"gh-pages": "^4.0.0",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"starknet-signature": "file:../prover/pkg",
		"typedarray-to-buffer": "^4.0.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.5.0",
		"@testing-library/user-event": "^7.2.1",
		"@types/jest": "^24.9.1",
		"@types/node": "^12.12.42",
		"@types/react": "^16.9.35",
		"@types/react-dom": "^16.9.8",
		"@types/react-redux": "^7.1.9",
		"@types/webpack-env": "^1.15.2",
		"lint-staged": "^10.2.6",
		"prettier": "^2.0.5",
		"react-app-rewired": "^2.1.6",
		"react-scripts": "3.4.3",
		"typescript": "^3.9.7",
		"wasm-loader": "^1.3.0",
		"worker-loader": "^2.0.0"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"prettier --write"
		]
	},
	"scripts": {
		"start": "react-app-rewired start",
		"build": "react-app-rewired build",
		"test": "react-app-rewired test",
		"eject": "react-scripts eject",
		"predeploy": "npm run build",
		"deploy": "yarn gh-pages -d build",
		"pretest": "yarn build-wasm",
		"build-wasm": "wasm-pack build ../prover && wasm-pack build ../prover --target nodejs --out-dir pkg-node",
		"test-native": "cargo test --manifest-path rust-wasm/Cargo.toml"
	},
	"eslintConfig": {
		"extends": "react-app",
		"rules": {
			"@typescript-eslint/no-explicit-any": "error",
			"no-var": "error",
			"prefer-const": "error"
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
